{
  "tags": [
    {
      "name": "questions",
      "description": "Operations related to questions"
    }
  ],
  "paths": {
    "/question": {
      "post": {
        "tags": ["questions"],
        "summary": "Add new questions",
        "responses": {
          "201": {
            "description": "Successfully created a new question"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Duplicate Entry"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "topic_code": {
                    "type": "string",
                    "example": "T001"
                  },
                  "question": {
                    "type": "string",
                    "example": "What is the main purpose of programming?"
                  },
                  "options": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "example": "To solve problems"
                    },
                    "example": [
                      "To solve problems",
                      "To write novels",
                      "To create art"
                    ]
                  },
                  "correct_answer": {
                    "type": "string",
                    "example": "To solve problems"
                  }
                },
                "required": [
                  "topic_code",
                  "question",
                  "options",
                  "correct_answer"
                ]
              }
            }
          }
        }
      },
      "get": {
        "tags": ["questions"],
        "summary": "Get all questions",
        "responses": {
          "200": {
            "description": "Successfully retrieved all questions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "topic_code": {
                        "type": "string",
                        "example": "T001"
                      },
                      "question": {
                        "type": "string",
                        "example": "What is the main purpose of programming?"
                      },
                      "options": {
                        "type": "array",
                        "items": {
                          "type": "string",
                          "example": "To solve problems"
                        },
                        "example": [
                          "To solve problems",
                          "To write novels",
                          "To create art"
                        ]
                      },
                      "correct_answer": {
                        "type": "string",
                        "example": "To solve problems"
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-10-14T10:00:00Z"
                      },
                      "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-10-14T10:00:00Z"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
